<?xml version="1.0" encoding="utf-8"?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="en-GB" Name="MediaPlayerCommandSet_en-GB">
    <CommandPrefix> Media Player, </CommandPrefix>
    <Example> Do something </Example>

    <Command Name="resumeReading">
      <Example> resume reading </Example>
      <ListenFor> resume [reading] </ListenFor>
      <Feedback> Resuming </Feedback>
      <Navigate/>
    </Command>

    <Command Name="continueReading">
      <Example> continue Reading </Example>
      <ListenFor> continue [reading] </ListenFor>
      <Feedback> Resuming </Feedback>
      <Navigate/>
    </Command>

    <Command Name="pauseReading">
      <Example> pause reading </Example>
      <ListenFor> pause [reading] </ListenFor>
      <Feedback> Stopping </Feedback>
      <Navigate/>
    </Command>

    <Command Name="stopReading">
      <Example> stop reading </Example>
      <ListenFor> stop [reading] [the] [book] </ListenFor>
      <Feedback> I won't read anymore </Feedback>
      <Navigate/>
    </Command>

    <Command Name="incVolume">
      <Example> increase volume </Example>
      <ListenFor> increase [the] volume </ListenFor>
      <Feedback> Increasing volume </Feedback>
      <Navigate/>
    </Command>

    <Command Name="decVolume">
      <Example> decrease volume </Example>
      <ListenFor> decrease [the] volume </ListenFor>
      <Feedback> Decreasing volume </Feedback>
      <Navigate/>
    </Command>

    <Command Name="incHalfVolume">
      <Example> increase volume half </Example>
      <ListenFor> increase [the] volume [by] half </ListenFor>
      <Feedback> Increasing volume </Feedback>
      <Navigate/>
    </Command>

    <Command Name="decHalfVolume">
      <Example> decrease volume half </Example>
      <ListenFor> decrease [the] volume [by] half </ListenFor>
      <Feedback> Decreasing volume </Feedback>
      <Navigate/>
    </Command>

    <Command Name="exitReader">
      <Example> exit reader </Example>
      <ListenFor> exit [reader] </ListenFor>
      <Feedback> Exitting application </Feedback>
      <Navigate/>
    </Command>
    
    <Command Name="stopReader">
      <Example> stop reading </Example>
      <ListenFor> stop reading </ListenFor>
      <Feedback> Exitting application </Feedback>
      <Navigate/>
    </Command>

    <Command Name="readSpecificBook">
      <Example> read a book </Example>
      <ListenFor> read {book} </ListenFor>
      <Feedback> Loading that book </Feedback>
      <Navigate/>
    </Command>
    
    <PhraseList Label="book"></PhraseList>

  </CommandSet>

  <!-- Other CommandSets for other languages -->

</VoiceCommands>